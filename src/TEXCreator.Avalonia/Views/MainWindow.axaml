<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TEXCreator.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="TEXCreator.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/TEXCreator.ico"
        Title="TEX Creator - PNG to TEX Converter"
        Width="900" Height="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid Margin="10" RowDefinitions="Auto,*,Auto">

        <!-- Settings Panel -->
        <StackPanel Grid.Row="0" Spacing="10" Margin="0,0,0,10">
            <TextBlock Text="Conversion Settings" FontSize="16" FontWeight="Bold"/>

            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
                <!-- Pixel Format -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Pixel Format:" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding PixelFormats}"
                             SelectedItem="{Binding SelectedPixelFormat}"
                             HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Texture Type -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Texture Type:" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding TextureTypes}"
                             SelectedItem="{Binding SelectedTextureType}"
                             HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Options -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <CheckBox Content="Generate Mipmaps"
                             IsChecked="{Binding GenerateMipmaps}"
                             Margin="0,0,0,5"/>
                    <CheckBox Content="Pre-multiply Alpha"
                             IsChecked="{Binding PreMultiplyAlpha}"/>
                </StackPanel>

                <!-- Convert Button -->
                <Button Grid.Column="3"
                       Content="Convert All"
                       Command="{Binding ConvertCommand}"
                       IsEnabled="{Binding !IsConverting}"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Center"
                       Padding="20,10"
                       FontWeight="Bold"/>
            </Grid>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="10">

            <!-- Left Panel - File List -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="10">
                <Grid RowDefinitions="Auto,*,Auto,Auto">
                    <TextBlock Grid.Row="0" Text="Selected Files" FontWeight="Bold" Margin="0,0,0,5"/>

                    <ListBox Grid.Row="1"
                            ItemsSource="{Binding SelectedFiles}"
                            SelectionMode="Single"
                            x:Name="FileListBox"
                            Margin="0,0,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" ToolTip.Tip="{Binding}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="5" Margin="0,0,0,10">
                        <Button Content="Add Files..." Click="AddFilesButton_Click" Padding="10,5"/>
                        <Button Content="Remove"
                               Command="{Binding RemoveSelectedFileCommand}"
                               CommandParameter="{Binding #FileListBox.SelectedItem}"
                               Padding="10,5"/>
                        <Button Content="Clear All" Command="{Binding ClearFilesCommand}" Padding="10,5"/>
                    </StackPanel>

                    <!-- Output Directory -->
                    <StackPanel Grid.Row="3" Spacing="5">
                        <TextBlock Text="Output Directory:" FontWeight="Bold"/>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBox Grid.Column="0" Text="{Binding OutputDirectory}" IsReadOnly="True"/>
                            <Button Grid.Column="1" Content="Browse..." Click="BrowseOutputButton_Click" Margin="5,0,0,0" Padding="10,5"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel - Log -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="10">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="Conversion Log" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl ItemsSource="{Binding LogMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" FontFamily="Consolas,Courier New,monospace"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="0,1,0,0" Padding="5" Margin="0,10,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0"
                          Text="{Binding SelectedFiles.Count, StringFormat='Files: {0}'}"
                          VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1"
                          Text="Converting..."
                          IsVisible="{Binding IsConverting}"
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
